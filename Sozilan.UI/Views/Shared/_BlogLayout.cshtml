@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Areas/Users/Images/_ship.ico" />
    @Styles.Render("~/bundles/content/css")
    @Scripts.Render("~/bundles/script/js")
    @Scripts.Render("~/bundles/ajax")
</head>
<body>
    <header class="navbar navbar-inverse navbar-fixed-top wet-asphalt" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><img src="~/Images/logo3.png" alt="logo"></a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="/">Ana Sayfa</a></li>
                    <li><a href="~/WebHome/Hakkimizda" target="_blank">Hakkımızda</a></li>
                    @*<li><a href="services.html">Services</a></li>
                        <li><a href="portfolio.html">Portfolio</a></li>*@
                    <li><a href="~/WebHome/İletisim" target="_blank">İletişim</a></li>
                    <li><a href="~/Blog/Index" target="_blank">Blog</a></li>
                    @{
                        if (HttpContext.Current.User.Identity.Name == "")
                        {
                            <li><a href="~/Users" target="_blank">Login</a></li>
                        }
                        else
                        {
                            <li><a href="/Users" style="color:#00ffff;">@HttpContext.Current.User.Identity.Name</a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </header><!--/header-->
    <div class="body-content">
        <div class="row" id="üst">
            <div class="col-md-12" style="margin-top:25px;">
                <div class="col-md-5">
                    <img id="slogan" src="~/Images/amc.png" />
                </div>
                <div class="col-md-7" id="aramaButonlari">
                    <div style="float:right;padding-top:18px;">
                        @*<div class="ss">
                            <a id="btnKariyer" class="btn" data-toggle="modal" data-target="#araModal" style="background-color:#101010;opacity:0.7;color:white;">#kariyer</a>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
        <hr />
        @RenderBody()
    </div>
</body>
</html>
