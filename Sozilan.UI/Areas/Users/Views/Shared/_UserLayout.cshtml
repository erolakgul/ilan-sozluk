@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Areas/Users/Images/_ship.ico"/>
    <!-- Bundle style render edilecek  -->
    @Styles.Render("~/bundles/admin/styles")
    <!-- Bundle scripts render edilecek  -->
    @Scripts.Render("~/bundles/admin/scripts")
    @Scripts.Render("~/bundles/ajax")
</head>
<body>
    <header class="navbar navbar-inverse wet-asphalt" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><img src="~/Images/logo3.png" alt="logo"></a>
            </div>
            <div class="collapse navbar-collapse">
                @Html.Partial("TopMenuPartial")
            </div>
        </div>
    </header>
    <div class="body-content">
        <div class="row" style="margin-right:0px !important;margin-left:0px!important;">
            <div class="col-md-12" id="üst">
                <div class="col-md-5">
                    <img id="slogan" src="~/Images/amc.png" />
                </div>
                <div class="col-md-7" id="aramaButonlari">
                    <div  style="float:right;padding-top:18px;">
                        <div class="ss">
                            <a id="btnKariyer" class="btn" data-toggle="modal" data-target="#araModal" style="background-color:#101010;opacity:0.7;color:white;">#kariyer</a>
                        </div>
                        <div class="ss">
                            <button id="btnSecret" type="button" class="btn btn-warning" data-toggle="modal" data-target="#araModal">#secretcv</button>
                        </div>
                        <div class="ss">
                            <button id="btnYeni" type="button" class="btn btn-info" data-toggle="modal" data-target="#araModal">#yenibiris</button>
                        </div>
                        <div class="ss">
                            <a id="btnEleman" class="btn" data-toggle="modal" data-target="#araModal" style="background-color:#101010;opacity:0.7;color:white;">#eleman</a>
                        </div>
                        <div class="ss">
                            <button id="btnLinked" type="button" class="btn btn-info" data-toggle="modal" data-target="#araModal">#linkedin</button>
                        </div>
                        <div class="ss">
                            <button id="btnFirsat" type="button" class="btn btn-warning" data-toggle="modal" data-target="#araModal">#fırsat</button>
                        </div>
                    </div>

                    <!-- Modal content-->
                    <div class="modal fade" id="araModal" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content" style="margin-top:10%;">
                                @Html.Partial("AramaPartial")
                            </div>
                        </div>
                    </div>
                    <!-- Modal content-->

                </div>
            </div>
        </div>
        <hr />
        @RenderBody()
    </div>
</body>
</html>